set serveroutput on;
declare
n number(4) :='&Number';
begin
dbms_output.put_line('outside the loop '||n);

while n mod 2 =0 loop
    dbms_output.put_line('Inside the loop');
    dbms_output.put_line(n);
    n :=n-2;
    exit ;
end loop;
end;


set serveroutput on;
declare
a number(8):='&number';
begin
while(a > 0) loop 
a :=a-2;
dbms_output.put_line('The given number is  '||a);
if a = 0 then exit ;
end if;
end loop;
end;


set serveroutput on;
begin
for i in 1..4
loop
while i mod 2 = 0 loop
i : =i+1;
dbms_output.put_line('i value '||i);
end loop;
dbms_output.put_line('i value outside loop2 '||i);
end loop;
end;
